<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/fragment2_header"
            android:src="@drawable/o"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:roundAsCircle="true"/>
        <TextView
            android:id="@+id/fragment2_nickname"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="hhh"
            android:textColor="#666666"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/fragment2_time"
            android:text="4444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="25dp"
        android:textColor="#666666"
        android:id="@+id/fragment2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <com.example.view.MyRecycleGridView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/circle_grid_view"></com.example.view.MyRecycleGridView>
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/fragment2_zan"
            android:button="@null"
            android:drawableTop="@drawable/zan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="33"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment2_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>
