<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_marginRight="24dp"
    android:layout_marginLeft="24dp"
    tools:context=".ZFActivity">

    <RelativeLayout
        android:id="@+id/pay_relative"
        android:layout_width="match_parent"
        android:layout_marginTop="138dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:text="选择支付方式"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/pay_relative"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pay_image1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_icon_payi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pay_image1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/commdity_text_color"
                    android:text="余额支付"/>
                <RadioButton
                    android:id="@+id/pay_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pay_image2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_icon_weixini"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pay_image2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/commdity_text_color"
                    android:text="微信支付"/>
                <RadioButton
                    android:id="@+id/pay_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pay_image3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_icon_zhifubao"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pay_image3"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/commdity_text_color"
                    android:text="支付宝支付"/>
                <RadioButton
                    android:id="@+id/pay_wzb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/pay_but_ok"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"

            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:background="#ff5e70"
            android:text="余额支付"/>
    </RelativeLayout>
</RelativeLayout>