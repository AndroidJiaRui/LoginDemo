<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".RegiestActivity">
    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <ImageView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/regiest_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_icon_phone_n_hdpi"/>
        <EditText
            android:textColor="#ffffff"
            android:id="@+id/regiest_name"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/regiest_phone"
            android:hint="手机号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColorHint="#ffffff"/>
        <View
            android:layout_below="@+id/regiest_phone"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <ImageView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/regiest_safe"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/aa"/>
        <EditText
            android:id="@+id/safe_code"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/regiest_safe"
            android:hint="验证码"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColorHint="#ffffff"/>
        <TextView
            android:id="@+id/get_safecode"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_below="@+id/regiest_safe"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <ImageView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/regiest_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_icon_lock_n_hdpi"/>
        <EditText
            android:textColor="#ffffff"
            android:password="true"
            android:id="@+id/regiest_pwd"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/regiest_lock"
            android:hint="登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColorHint="#ffffff"/>
        <ImageView
            android:id="@+id/regiest_eyes"
            android:layout_alignParentRight="true"
            android:src="@drawable/login_icon_eye_n_hdhpi"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <View
            android:layout_below="@+id/regiest_lock"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/regiest_login"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:text="已有账户?立即登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_regiest"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#f00"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginBottom="120dp"/>
    </RelativeLayout>
</LinearLayout>