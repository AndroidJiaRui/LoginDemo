<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="97dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/shopping_itme_image"
            android:layout_width="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_height="80dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/shopping_itme_title"
                android:layout_width="wrap_content"
                android:textColor="#666666"
                android:textSize="12sp"
                android:text="标题"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/shopping_itme_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0606"
                android:layout_alignParentBottom="true"
                android:text="¥00.00"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/shopping_itme_reduce"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="—"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/shopping_itme_count"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="1"/>
                <Button
                    android:id="@+id/shopping_itme_add"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:text="+"
                    android:background="#ffffff"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
