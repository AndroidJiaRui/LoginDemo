<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/xq_image_one"
        android:src="@drawable/o"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_306" />
    <ImageView
        android:src="@drawable/o"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/xq_image_one2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_306" />
    <ImageView
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/xq_image_one3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_306" />
    <TextView
        android:textSize="25dp"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:textColor="#666666"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="产品介绍"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/xq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/xq_image"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_100" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="15dp"
                android:textColor="#666666"
                android:id="@+id/xq_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="品牌名称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="原产国"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="保质期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#666666"
                android:text="商品详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
