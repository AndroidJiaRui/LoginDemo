<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <ImageView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/login_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_icon_phone_n_hdpi"/>
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/login_name"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/login_phone"
            android:hint="手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp" />
        <View
            android:layout_below="@+id/login_phone"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp">
        <ImageView
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/login_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/login_icon_lock_n_hdpi"/>
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/login_pwd"
            android:paddingBottom="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/login_lock"
            android:hint="登录密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:textSize="18dp" />
        <ImageView
            android:id="@+id/login_eyes"
            android:layout_alignParentRight="true"
            android:src="@drawable/login_icon_eye_n_hdhpi"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <View
            android:layout_below="@+id/login_lock"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginRight="5dp"
            android:id="@+id/login_check"
            android:layout_width="15dp"
            android:button="@null"
            android:layout_height="15dp"
            android:background="@drawable/selector"
            />
        <TextView
            android:layout_toRightOf="@+id/login_check"
            android:textSize="14dp"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_regiest"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:text="快速注册"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_login"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#f00"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginBottom="120dp"/>
    </RelativeLayout>

</LinearLayout>